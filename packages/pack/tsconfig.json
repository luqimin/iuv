{
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "commonjs",
    "lib": [
      "esnext",
      "dom"
    ],     
    "declaration": true,
    "declarationDir": "./types",
    "outDir": "./build",
    "rootDir": "./src",
    "baseUrl": "./",
    "removeComments": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strict": true
  },
  "include": [
    "./*.d.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}