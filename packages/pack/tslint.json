{
    "defaultSeverity": "error",
    "extends": ["tslint:recommended"],
    "jsRules": {},
    "rules": {
        "align": [true, "parameters", "statements", "members", "elements"],
        "indent": [true, "spaces", 4],
        "max-line-length": [true, 133],
        "quotemark": [true, "single", "jsx-double", "avoid-escape", "avoid-template"],
        "eofline": true,
        "only-arrow-functions": false,
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-leading-underscore",
            "allow-trailing-underscore",
            "allow-pascal-case",
            "allow-snake-case"
        ],
        "ordered-imports": false,
        "object-literal-sort-keys": false,
        "no-eval": false,
        "no-console": false,
        "no-empty": [true, "allow-empty-catch", "allow-empty-functions"],
        "no-string-literal": false,
        "no-unused-expression": [true, "allow-fast-null-checks", "allow-new", "allow-tagged-template"],
        "no-namespace": false,
        "no-duplicate-imports": true,
        "one-variable-per-declaration": false,
        "object-literal-shorthand": false,
        "curly": [true, "ignore-same-line"],
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "ignore",
                    "typeLiterals": "ignore"
                },
                "singleline": "never",
                "esSpecCompliant": true
            }
        ],
        "space-before-function-paren": [
            true,
            {
                "anonymous": "always",
                "named": "never",
                "asyncArrow": "always"
            }
        ],
        "prefer-const": [
            true,
            {
                "destructuring": "all"
            }
        ],
        "radix": false,
        "forin": false,
        "interface-name": false
    },
    "rulesDirectory": []
}
